                </p>
            </section>

        </div>
    </main>
    <Footer />
</Layout>

<style>
    .legal-wrapper {
        padding: 120px 20px 60px;
        background: var(--bg-body);
        color: var(--text-muted);
        line-height: 1.7;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background: #222;
        padding: 50px;
        border-radius: 30px;
        /* Dein 5px Border für den konsistenten Look */
        border: 5px solid rgba(255,255,255,0.08);
        box-shadow: 0 20px 50px rgba(0,0,0,0.4);
    }

    .back-link {
        display: inline-block;
        color: var(--cyan);
        text-decoration: none;
        margin-bottom: 30px;
        font-weight: 600;
        transition: 0.3s;
    }
    .back-link:hover { transform: translateX(-5px); }

    h1 { color: white; font-size: 2.5rem; margin-bottom: 40px; font-weight: 900; }
    h2 { color: white; font-size: 1.3rem; margin-top: 35px; margin-bottom: 15px; font-weight: 700; border-left: 3px solid var(--cyan); padding-left: 15px; }
    
    hr { border: 0; border-top: 1px solid rgba(255,255,255,0.1); margin: 40px 0; }

    section p { margin-bottom: 15px; font-size: 0.95rem; }
    
    strong { color: white; }
    
    a { color: var(--cyan); text-decoration: none; transition: 0.3s; }
    a:hover { filter: brightness(1.2); }

    @media (max-width: 600px) {
        .container { padding: 30px 20px; }
        h1 { font-size: 2rem; }
    }
</style>