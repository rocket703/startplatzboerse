---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Popup from '../components/Popup.astro';
---

<Layout title="Dashboard | startplatzboerse.com">
    <main class="dash-page">
        <div class="container">
            
            <header class="dash-header-new">
                <div class="user-greeting">
                    <span class="eyebrow">Willkommen zurück</span>
                    <h1 id="dash-heading" class="gradient-text">Dashboard</h1>
                </div>
                <div class="header-stats-pill">
                    <div class="stat-group">
                        <span id="stats-count">0</span>
                        <label>Inserate</label>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-group">
                        <span id="watchlist-count">0</span>
                        <label>Gemerkt</label>
                    </div>
                </div>
            </header>

            <div class="quick-actions">
                <a href="/inserieren" class="action-btn primary">
                    <span class="icon">＋</span> Inserat erstellen
                </a>
                <button id="logout-trigger" class="action-btn secondary">
                    Abmelden
                </button>
            </div>

            <nav class="dash-nav-pills">
                <button class="nav-pill active" data-target="section-listings">Anzeigen</button>
                <button class="nav-pill" data-target="section-messages">Chats</button>
                <button class="nav-pill" data-target="section-watchlist">Merkliste</button>
            </nav>

            <div class="dash-content">
                <section id="section-listings" class="dash-section active">
                    <div id="listings-grid" class="smart-grid"></div>
                    <div id="no-listings" class="empty-state" style="display:none;">
                        <p>Noch keine Inserate online.</p>
                    </div>
                </section>

                <section id="section-messages" class="dash-section">
                    <div id="inquiries-feed" class="message-stack"></div>
                    <div id="no-inquiries" class="empty-state" style="display:none;">
                        <p>Keine aktiven Chats vorhanden.</p>
                    </div>
                </section>

                <section id="section-watchlist" class="dash-section">
                    <div class="glass-card">
                        <p style="color:#666; text-align: center;">Demnächst verfügbar: Merke dir Inserate für später.</p>
                    </div>
                </section>
            </div>
        </div>

        <Popup id="status-popup" title="Info">
            <p id="popup-text" style="color: #ccc; margin-bottom: 20px;"></p>
            <div class="modal-footer-btns">
                <button class="btn-close-modal" onclick="document.getElementById('status-popup').style.display='none'">Abbrechen</button>
                <button id="confirm-action-btn" class="btn-action-main" style="display:none;">Bestätigen</button>
            </div>
        </Popup>

        <div id="edit-modal" class="modal-overlay" style="display:none;">
            <div class="modal-content glass-card">
                <h3 style="margin-bottom: 20px;">Preis anpassen</h3>
                <div class="input-glow-wrap">
                    <input type="number" id="new-price" placeholder="0">
                    <span>€</span>
                </div>
                <input type="hidden" id="edit-listing-id">
                <div class="modal-footer-btns">
                    <button onclick="document.getElementById('edit-modal').style.display='none'" class="btn-close-modal">Abbrechen</button>
                    <button id="save-price" class="btn-action-main">Speichern</button>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style is:global>
    :root {
        --cyan: #00bcd4;
        --bg: #323232;
        --card-bg: #111;
        --border-light: rgba(255, 255, 255, 0.15); /* Etwas heller für den 5px Effekt */
    }

    /* --- BASIS STYLES --- */
    .dash-page { background: var(--bg); min-height: 100vh; padding: 120px 20px 40px; color: white; font-family: system-ui, sans-serif; }
    .container { max-width: 1000px; margin: 0 auto; }

    /* --- KARTEN  --- */
    .glass-card, .msg-card, .header-stats-pill { 
        background: var(--card-bg); 
        border: 5px solid rgba(255,255,255,0.05) !important; 
        padding: 25px; 
        border-radius: 24px; 
        position: relative; 
    }

    /* --- PILLEN (DUNKEL & RESPONSIV) --- */
    .dash-nav-pills { 
        display: grid; 
        grid-template-columns: 1fr 1fr 1fr; 
        gap: 8px; 
        margin-bottom: 30px; 
    }
    .nav-pill { 
        background: var(--card-bg); 
        border: 3px solid rgba(255,255,255,0.05);; 
        color: #666; 
        padding: 12px 5px; 
        border-radius: 25px; 
        font-weight: 800; 
        font-size: 0.75rem;
        cursor: pointer; 
        transition: 0.2s;
        text-align: center;
    }
    .nav-pill.active { background: var(--cyan); color: #000; border-color: var(--cyan); }

    /* --- CHAT KARTEN SPECIFICS --- */
    .message-stack { display: flex; flex-direction: column; gap: 12px; }
    .msg-card { cursor: pointer; transition: 0.2s; border-left: 8px solid #333 !important; }
    .msg-card.is-seller { border-left-color: var(--cyan) !important; } 
    .msg-card.is-buyer { border-left-color: #ffcc00 !important; }
    .msg-card:hover { transform: translateX(5px); border-color: var(--cyan); }
    .role-badge { font-size: 0.6rem; font-weight: 900; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 4px; display: block; }
    .role-seller { color: var(--cyan); }
    .role-buyer { color: #ffcc00; }

    /* --- HEADER & STATS --- */
    .dash-header-new { display: flex; flex-direction: column; gap: 20px; margin-bottom: 30px; }
    @media (min-width: 768px) { .dash-header-new { flex-direction: row; justify-content: space-between; align-items: center; } }
    .user-greeting h1 { font-size: 2.2rem; font-weight: 900; margin: 0; }
    .eyebrow { color: var(--cyan); font-weight: 800; text-transform: uppercase; font-size: 0.7rem; letter-spacing: 2px; }
    .header-stats-pill { display: flex; padding: 15px 25px; gap: 20px; align-items: center; }
    .stat-group span { font-size: 1.4rem; font-weight: 900; color: var(--cyan); display: block; }
    .stat-group label { font-size: 0.6rem; color: #666; text-transform: uppercase; font-weight: 800; }
    .stat-divider { width: 1px; background: var(--border-light); height: 30px; }

    /* --- ACTIONS --- */
    .quick-actions { display: grid; grid-template-columns: 2fr 1fr; gap: 12px; margin-bottom: 30px; }
    .action-btn { padding: 18px; border-radius: 16px; border: none; font-weight: 900; cursor: pointer; text-decoration: none; text-align: center; transition: 0.2s; font-size: 0.9rem;}
    .action-btn.primary { background: var(--cyan); color: #000; }
    .action-btn.secondary { background: #1a1a1a; color: #666; border: 2px solid var(--border-light); }

    /* --- INSERAT KARTEN BUTTONS --- */
    .price-tag-new { font-size: 2rem; font-weight: 900; color: var(--cyan); margin: 15px 0; }
    .card-footer-btns { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 10px; }
    .btn-dash-edit { background: var(--cyan); color: #000; border: none; padding: 14px; border-radius: 12px; font-weight: 900; cursor: pointer; }
    .btn-dash-delete { background: rgba(255, 68, 68, 0.1); color: #ff4444; border: 2px solid rgba(255, 68, 68, 0.2); padding: 14px; border-radius: 12px; font-weight: 800; cursor: pointer; }

    /* --- MODALS & POPUPS --- */
    .modal-overlay { 
        position: fixed; inset: 0; background: rgba(0,0,0,0.92); 
        z-index: 9999; display: flex; align-items: center; justify-content: center; 
        backdrop-filter: blur(15px); padding: 20px;
    }
    .modal-content, .popup-card { 
        width: 100%; max-width: 420px; text-align: center; 
        background: #111; border: 5px solid var(--border-light); 
        padding: 40px; border-radius: 30px; 
    }
    .modal-footer-btns { display: flex; gap: 12px; margin-top: 30px; }
    
    /* MODAL BUTTONS STYLING */
    .btn-close-modal { 
        flex: 1; padding: 16px; border-radius: 14px; background: #222; 
        border: 2px solid #333; color: #888; font-weight: 800; cursor: pointer; transition: 0.2s;
    }
    .btn-close-modal:hover { background: #333; color: white; }
    
    .btn-action-main { 
        flex: 1.5; padding: 16px; border-radius: 14px; background: var(--cyan); 
        border: none; color: #000; font-weight: 900; cursor: pointer; transition: 0.2s;
    }
    .btn-action-main:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0, 188, 212, 0.3); }

    /* --- PREIS INPUT (PFEILE ENTFERNEN) --- */
    #new-price { 
        background: transparent; border: none; color: white; 
        font-size: 4rem; font-weight: 900; width: 100%; 
        text-align: center; outline: none; 
    }
    /* Chrome, Safari, Edge, Opera */
    #new-price::-webkit-outer-spin-button,
    #new-price::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    /* Firefox */
    #new-price[type=number] {
        -moz-appearance: textfield;
    }

    .input-glow-wrap { display: flex; align-items: center; justify-content: center; position: relative; margin: 20px 0; }
    .input-glow-wrap span { font-size: 2.5rem; color: var(--cyan); font-weight: 900; margin-left: 5px; }

    .dash-section { display: none; }
    .dash-section.active { display: block; animation: fadeIn 0.3s ease-in; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    /* Badge an der Nav-Pille oben */
.pill-badge {
    background: var(--cyan);
    color: white;
    font-size: 0.65rem;
    padding: 2px 7px;
    border-radius: 10px;
    margin-left: 6px;
    font-weight: 900;
    box-shadow: 0 0 10px rgba(0, 188, 212, 0.4);
}

/* Karte im Feed hervorheben wenn ungelesen */
.unread-highlight {
    border-color: var(--cyan) !important;
    background: rgba(0, 188, 212, 0.08) !important;
    box-shadow: inset 0 0 15px rgba(0, 188, 212, 0.1);
}

/* Der leuchtende Punkt in der Karte */
.unread-dot {
    position: absolute;
    top: 18px;
    right: 18px;
    width: 12px;
    height: 12px;
    background: var(--cyan);
    border-radius: 50%;
    box-shadow: 0 0 12px var(--cyan);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
    100% { opacity: 1; transform: scale(1); }
}
</style>

<script>
    import { createClient } from '@supabase/supabase-js';

    const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    );

    let deleteId = null;

    // --- POPUP STEUERUNG ---
    function showPopup(title, message, isDelete = false) {
        const popup = document.getElementById('status-popup');
        const popupText = document.getElementById('popup-text');
        const confirmBtn = document.getElementById('confirm-action-btn');

        if (popup && popupText) {
            popup.querySelector('h3').innerText = title;
            popupText.innerText = message;
            
            if (confirmBtn) {
                confirmBtn.style.display = isDelete ? 'block' : 'none';
                if (isDelete) {
                    confirmBtn.innerText = "Jetzt Löschen";
                    confirmBtn.style.background = "#ff4444";
                    confirmBtn.style.color = "white";
                }
            }
            popup.style.display = 'flex';
        }
    }

    // --- 1. User Session holen ---
    async function init() {
        const { data: { user } } = await supabase.auth.getUser();
        if (!user) { window.location.href = "/login"; return; }

    // --- NICKNAME HOLEN & ANZEIGEN ---
        const { data: profile } = await supabase
            .from('profiles')
            .select('nickname')
            .eq('id', user.id)
            .single();

        const heading = document.getElementById('dash-heading');
        if (heading && profile?.nickname) {
            heading.innerText = `${profile.nickname}`;
        }

        // Beide Feeds laden
        await Promise.all([fetchListings(user.id), fetchChats(user.id)]);
        setupTabs();

        document.getElementById('logout-trigger')?.addEventListener('click', async () => {
            await supabase.auth.signOut();
            window.location.href = "/";
        });
    }

    function setupTabs() {
        const pills = document.querySelectorAll('.nav-pill');
        const sections = document.querySelectorAll('.dash-section');

        pills.forEach(pill => {
            pill.addEventListener('click', () => {
                const target = pill.getAttribute('data-target');
                pills.forEach(p => p.classList.remove('active'));
                sections.forEach(s => s.classList.remove('active'));

                pill.classList.add('active');
                const targetSection = document.getElementById(target);
                if (targetSection) targetSection.classList.add('active');
            });
        });
    }

    async function fetchListings(userId) {
        const grid = document.getElementById('listings-grid');
        // WICHTIG: Hier 'old_price' mit abfragen
        const { data, error } = await supabase
            .from('listings')
            .select('*') 
            .eq('user_id', userId)
            .order('created_at', {ascending: false});

        if (error) return;

        const statsCount = document.getElementById('stats-count');
        if (statsCount) statsCount.innerText = String(data?.length || 0);

        if (!data || data.length === 0) {
            document.getElementById('no-listings').style.display = 'block';
            return;
        }
        
        grid.innerHTML = data.map(item => {
            // Logik für die Anzeige des Preises (Streichpreis vs Normal)
            let priceHtml = `<div class="price-tag-new">${item.price}€</div>`;
            
            if (item.old_price && item.old_price > item.price) {
                priceHtml = `
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <span style="text-decoration: line-through; color: #888; font-size: 0.9em;">${item.old_price}€</span>
                        <div class="price-tag-new" style="color: #00bcd4; font-weight: bold;">${item.price}€</div>
                    </div>
                `;
            }

            return `
            <div class="glass-card">
                <span class="eyebrow">${item.category}</span>
                <h3 style="margin: 10px 0 5px 0;">${item.event_name}</h3>
                <p style="color:#555; font-size:0.8rem;">${new Date(item.event_date).toLocaleDateString()}</p>
                
                ${priceHtml}

                <div class="card-footer-btns">
                    <button class="btn-dash-edit" onclick="window.openEditModal('${item.id}', '${item.price}')">Preis</button>
                    <button class="btn-dash-delete" onclick="window.askDelete('${item.id}')">Löschen</button>
                </div>
            </div>
            `;
        }).join('');
    }

    async function fetchChats(userId) {
        const feed = document.getElementById('inquiries-feed');
        const chatPill = document.querySelector('.nav-pill[data-target="section-messages"]');

        const { data: chats, error } = await supabase
            .from('conversations')
            .select(`
                id, 
                updated_at, 
                seller_id, 
                buyer_id,
                listings(event_name),
                messages(is_read, sender_id),
                seller:profiles!conversations_seller_id_fkey(nickname),
                buyer:profiles!conversations_buyer_id_fkey(nickname)
            `)
            .or(`buyer_id.eq.${userId},seller_id.eq.${userId}`)
            .order('updated_at', { ascending: false });

        if (error || !chats) {
            if (error) console.error("Chat fetch error:", error);
            document.getElementById('no-inquiries').style.display = 'block';
            return;
        }

        let totalUnreadGlobal = 0;

        feed.innerHTML = chats.map(chat => {
            const isSeller = chat.seller_id === userId;
            const partnerName = isSeller ? chat.buyer?.nickname : chat.seller?.nickname;
            
            // Zähle ungelesene Nachrichten, die NICHT von mir sind
            const unreadCount = chat.messages.filter(m => !m.is_read && m.sender_id !== userId).length;
            totalUnreadGlobal += unreadCount;

            const roleClass = isSeller ? 'is-seller' : 'is-buyer';
            const roleLabel = isSeller ? 'Anfrage von' : 'Anfrage an';
            const badgeLabel = isSeller ? 'role-seller' : 'role-buyer';

            return `
                <div class="msg-card ${roleClass} ${unreadCount > 0 ? 'unread-highlight' : ''}" onclick="window.location.href='/chat?id=${chat.id}'">
                    ${unreadCount > 0 ? '<span class="unread-dot"></span>' : ''}
                    <span class="role-badge ${badgeLabel}">${roleLabel} ${partnerName || 'User'}</span>
                    <h4 style="margin:5px 0; color:white; font-size: 1.1rem;">${chat.listings?.event_name || 'Event'}</h4>
                    <div style="display:flex; justify-content: space-between; align-items: center; margin-top: 10px;">
                        <span style="font-size:0.65rem; color:${unreadCount > 0 ? 'var(--cyan)' : '#555'}; font-weight:${unreadCount > 0 ? '800' : '400'};">
                            ${unreadCount > 0 ? unreadCount + ' NEUE NACHRICHTEN' : 'Stand: ' + new Date(chat.updated_at).toLocaleDateString()}
                        </span>
                        <span style="font-size:0.7rem; color:var(--cyan); font-weight:700;">Öffnen →</span>
                    </div>
                </div>
            `;
        }).join('');

        // Badge an der Pill im Dashboard Header setzen
        if (chatPill) {
            if (totalUnreadGlobal > 0) {
                chatPill.innerHTML = `Chats <span class="pill-badge">${totalUnreadGlobal}</span>`;
            } else {
                chatPill.innerHTML = `Chats`;
            }
        }
    }

    // --- WINDOW GLOBALS ---
    window.askDelete = (id) => {
        deleteId = id;
        showPopup("Inserat löschen", "Bist du sicher? Das Inserat wird unwiderruflich entfernt.", true);
        
        const confirmBtn = document.getElementById('confirm-action-btn');
        confirmBtn.onclick = async () => {
            const { error } = await supabase.from('listings').delete().eq('id', deleteId);
            if (!error) location.reload();
        };
    };

    window.openEditModal = (id, price) => {
        document.getElementById('edit-listing-id').value = id;
        document.getElementById('new-price').value = price;
        document.getElementById('edit-modal').style.display = 'flex';
    };

    // --- HIER IST DIE KORRIGIERTE PREIS-LOGIK ---
    document.getElementById('save-price')?.addEventListener('click', async () => {
        const id = (document.getElementById('edit-listing-id') as HTMLInputElement).value;
        const newPrice = parseFloat((document.getElementById('new-price') as HTMLInputElement).value);
        
        const btn = document.getElementById('save-price');
        btn.innerText = "Speichere...";
        btn.disabled = true;

        // 1. Hole aktuellen Datensatz, um old_price zu prüfen
        const { data: currentItem, error: fetchError } = await supabase
            .from('listings')
            .select('price, old_price')
            .eq('id', id)
            .single();

        if (fetchError) {
            alert("Fehler beim Laden des Inserats.");
            location.reload();
            return;
        }

        let updateData = { price: newPrice };

        // 2. Intelligente Logik für old_price
        if (!currentItem.old_price) {
            // Wenn noch kein alter Preis da ist, speichere den aktuellen als "Alt"
            updateData.old_price = currentItem.price;
        } else if (newPrice >= currentItem.old_price) {
            // Wenn neuer Preis wieder höher/gleich dem Original ist -> Streichpreis entfernen
            updateData.old_price = null;
        }

        // 3. Update durchführen
        const { error } = await supabase.from('listings').update(updateData).eq('id', id);
        
        if (!error) {
            location.reload();
        } else {
            alert("Fehler beim Speichern: " + error.message);
            btn.innerText = "Speichern";
            btn.disabled = false;
        }
    });

    init();
</script>