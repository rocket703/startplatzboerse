---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Kontakt ">
    <main class="page-wrapper">
        
        <div class="form-wrapper">
            <div class="container">
                
                <div class="heading">Schreib mir</div>
                
                <p class="info-text">
                    Hast du Fragen zur Plattform, einen Bug gefunden oder Feedback? 
                    Als Ein-Mann-Projekt freue ich mich über jede Nachricht.
                </p>
                
                <form action="https://api.web3forms.com/submit" method="POST" class="form" id="contact-form">

                    <input type="hidden" name="access_key" value="e69583c0-8243-43fb-a59d-1f81a16ed571">
                    
                    <input type="hidden" name="from_name" value="Startplatzboerse Kontakt">
                    
                    <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

                    <input required class="input" type="text" name="name" placeholder="Dein Name">
                    <input required class="input" type="email" name="email" placeholder="Deine E-Mail Adresse">
                    
                    <input required class="input" type="text" name="subject" placeholder="Betreff">
                    
                    <textarea required class="input textarea" name="message" rows="5" placeholder="Deine Nachricht..."></textarea>
                    
                    <button class="login-button" type="submit" id="submit-btn">Nachricht senden</button>

                    <p id="result" style="display:none; text-align: center; margin-top: 20px; font-weight: bold;"></p>

                </form>

            </div>
        </div>

    </main>
    
    <Footer />
</Layout>

<script is:inline>
    const form = document.getElementById('contact-form');
    const result = document.getElementById('result');
    const btn = document.getElementById('submit-btn');

    form.addEventListener('submit', function(e) {
        e.preventDefault(); // Verhindert das Neuladen der Seite
        
        const formData = new FormData(form);
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);

        // UI Update: Button sperren & Text ändern
        result.innerHTML = "Einen Moment...";
        result.style.display = "block";
        result.style.color = "#999";
        btn.disabled = true;
        btn.innerHTML = "Sende...";

        fetch('https://api.web3forms.com/submit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: json
        })
        .then(async (response) => {
            if (response.status == 200) {
                // Erfolg
                result.innerHTML = "Danke! Deine Nachricht wurde gesendet.";
                result.style.color = "var(--cyan)";
                btn.innerHTML = "Gesendet ✓";
                form.reset(); // Formular leeren
            } else {
                // Fehler von Web3Forms
                console.log(response);
                result.innerHTML = "Ups, da lief was schief.";
                result.style.color = "#ff4444";
                btn.disabled = false;
                btn.innerHTML = "Nachricht senden";
            }
        })
        .catch(error => {
            // Netzwerkfehler
            console.log(error);
            result.innerHTML = "Verbindungsfehler.";
            result.style.color = "#ff4444";
            btn.disabled = false;
            btn.innerHTML = "Nachricht senden";
        })
        .then(function() {
            // Nach 5 Sekunden die Meldung wieder ausblenden und Button resetten
            setTimeout(() => {
                result.style.display = "none";
                btn.disabled = false;
                btn.innerHTML = "Nachricht senden";
            }, 5000);
        });
    });
</script>

<style>
    .page-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-top: 100px;
        background: var(--bg-body);
    }

    .form-wrapper {
        display: flex; justify-content: center; padding: 20px;
        flex: 1; align-items: center;
    }

    /* Container Design */
    .container {
        max-width: 500px;
        width: 100%;
        background: #222222;
        border-radius: 30px;
        padding: 40px 35px;
        border: 5px solid rgba(255,255,255,0.08); 
        box-shadow: 0 30px 60px rgba(0,0,0,0.6); 
    }

    .heading {
        text-align: center; font-weight: 900; font-size: 32px;
        color: var(--cyan); margin-bottom: 15px;
    }

    .info-text {
        text-align: center; color: #b0b0b0; font-size: 0.95rem;
        line-height: 1.6; margin-bottom: 30px;
    }

    /* Inputs */
    .form .input {
        width: 100%;
        background: #1a1a1a;
        border: 1px solid rgba(255,255,255,0.05);
        padding: 16px 20px;
        border-radius: 16px;
        margin-bottom: 20px;
        color: white;
        font-family: inherit;
        box-shadow: inset 0 2px 5px rgba(0,0,0,0.5);
        transition: 0.3s;
    }
    .form .input::placeholder { color: #666; }
    .form .input:focus {
        outline: none; border-color: var(--cyan); background: #151515;
        box-shadow: inset 0 2px 5px rgba(0,0,0,0.8);
    }

    .textarea { resize: vertical; min-height: 120px; }

    /* Button */
    .form .login-button {
        display: block; width: 100%; font-weight: bold;
        background: var(--cyan); color: white;
        padding-block: 16px; border-radius: 16px; border: none;
        cursor: pointer; font-size: 1rem;
        transition: all 0.2s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        margin-top: 10px;
    }
    .form .login-button:hover { filter: brightness(1.1); transform: translateY(-2px); }
    .form .login-button:disabled { background: #444; color: #aaa; cursor: wait; transform: none; box-shadow: none; }

</style>