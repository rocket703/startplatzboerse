---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<div id={id} class="popup-overlay" style="display: none;">
    <div class="popup-card">
        <div class="popup-header">
            <h3>{title}</h3>
            <button class="close-popup" onclick={`document.getElementById('${id}').style.display='none'`}>âœ•</button>
        </div>
        <div class="popup-body">
            <slot /> </div>
    </div>
</div>

<style>
    .popup-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        padding: 20px;
    }
    .popup-card {
        background: #111;
        width: 100%;
        max-width: 450px;
        border-radius: 24px;
        border: 2px solid rgba(0, 188, 212, 0.3);
        padding: 30px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        position: relative;
    }
    .popup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .popup-header h3 {
        margin: 0;
        font-size: 1.4rem;
        font-weight: 800;
        color: white;
    }
    .close-popup {
        background: none;
        border: none;
        color: #444;
        font-size: 1.2rem;
        cursor: pointer;
        transition: 0.2s;
    }
    .close-popup:hover {
        color: white;
    }
    .popup-body {
        color: #aaa;
        line-height: 1.6;
    }
</style>