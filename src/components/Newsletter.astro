        </div>
    </div>
</div>

<script is:inline>
    // Das Skript verhindert das Neuladen der Seite
    const form = document.getElementById('newsletter-form');
    const result = document.getElementById('result');
    const btn = document.getElementById('submit-btn');

    form.addEventListener('submit', function(e) {
        e.preventDefault(); // Stoppt normale Weiterleitung
        const formData = new FormData(form);
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);

        result.innerHTML = "Bitte warten...";
        result.style.display = "block";
        btn.disabled = true; // Button sperren damit man nicht 2x klickt

        fetch('https://api.web3forms.com/submit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: json
        })
        .then(async (response) => {
            if (response.status == 200) {
                result.innerHTML = "Danke! Du bist dabei.";
                result.style.color = "var(--cyan)";
                btn.innerHTML = "Gesendet ✓";
            } else {
                result.innerHTML = "Ups, da lief was schief.";
                result.style.color = "red";
                btn.disabled = false;
            }
        })
        .catch(error => {
            console.log(error);
            result.innerHTML = "Fehler beim Senden.";
            btn.disabled = false;
        })
        .then(function() {
            form.reset();
            setTimeout(() => {
                result.style.display = "none";
                btn.disabled = false;
                btn.innerHTML = "Benachrichtigen";
            }, 5000);
        });
    });
</script>

<style>
    /* CSS BLEIBT GLEICH */
    .newsletter-wrapper { 
        display: flex; 
        justify-content: center; 
        padding: 60px 20px; 
    }
    .container { 
        max-width: 450px; 
        width: 100%; 
        background: #222222; 
        border-radius: 30px; 
        padding: 40px 35px; 
        border: 5px solid rgba(255,255,255,0.08); 
        box-shadow: 0 20px 40px rgba(0,0,0,0.6); 
    }
    .heading { 
        text-align: center; 
        font-weight: 900; 
        font-size: 28px; 
        color: var(--cyan); 
        margin-bottom: 10px; 
    }
    .info-text { 
        text-align: center; 
        color: #b0b0b0; 
        font-size: 0.95rem; 
        line-height: 1.5; 
        margin-bottom: 30px; 
    }
    .form .input { width: 100%; background: #1a1a1a; border: 1px solid rgba(255,255,255,0.05); padding: 16px 20px; border-radius: 16px; margin-bottom: 20px; color: white; box-shadow: inset 0 2px 5px rgba(0,0,0,0.5); transition: 0.3s; }
    .form .input::placeholder { color: #666; }
    .form .input:focus { outline: none; border-color: var(--cyan); background: #151515; }
    .form .login-button { display: block; width: 100%; font-weight: bold; background: var(--cyan); color: white; padding-block: 15px; border-radius: 16px; border: none; cursor: pointer; font-size: 1rem; transition: all 0.2s ease; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); }
    .form .login-button:hover { filter: brightness(1.1); transform: translateY(-2px); }
    .form .login-button:disabled { background: #555; cursor: not-allowed; transform: none; box-shadow: none; }
    .social-section { margin-top: 30px; display: flex; flex-direction: column; align-items: center; gap: 5px; }
    .social-text { color: #888; font-size: 0.85rem; margin-bottom: 10px; font-weight: 500; }
    .social-button { background: #2a2a2a; border: 1px solid rgba(255,255,255,0.05); padding: 12px; border-radius: 50%; width: 48px; height: 48px; display: flex; justify-content: center; align-items: center; transition: all 0.2s ease; }
    .social-button .svg { fill: white; height: 20px; transition: 0.3s; }
    .social-button:hover { background: #333; transform: scale(1.1); border-color: var(--cyan); }
    .social-button:hover .svg { fill: var(--cyan); }
</style>