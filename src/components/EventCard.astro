---
// src/components/EventCard.astro
const { category, title, date, location, distance, price, oldPrice } = Astro.props;
---

<div class="event-card">
    <div class="card-header">
        <span class="category">{category}</span>
        <span class="date">{date}</span>
    </div>
    <h3>{title}</h3>
    <div class="info">
        <span>{location}</span> • <span>{distance}</span>
    </div>
    <div class="price-box">
        <div class="price-wrapper">
            {oldPrice && oldPrice > price && (
                <span class="old">{oldPrice}€</span>
            )}
            <span class="price">{price}€</span>
        </div>
        {oldPrice && oldPrice > price && (
            <span class="sale-badge">Deal</span>
        )}
    </div>
</div>

<style>
    .event-card {
        background: #111; /* Passend zum Dashboard-Style */
        padding: 30px;
        border-radius: 24px;
        border: 5px solid rgba(255,255,255,0.05);
        color: white;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-5px);
        border-color: rgba(0, 188, 212, 0.3);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .category { 
        color: #00bcd4; 
        font-weight: 800; 
        font-size: 0.7rem; 
        text-transform: uppercase; 
        letter-spacing: 1px;
    }

    .date { 
        color: #444; 
        font-size: 0.8rem; 
        font-weight: 600;
    }

    h3 { 
        margin: 0 0 8px; 
        font-size: clamp(1.3rem, 4vw, 1.6rem); 
        font-weight: 900; 
        letter-spacing: -0.5px;
    }

    .info { 
        color: #888; 
        font-size: 0.95rem; 
        margin-bottom: 25px; 
    }

    .price-box { 
        border-top: 1px solid rgba(255,255,255,0.05); 
        padding-top: 20px; 
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .price-wrapper {
        display: flex;
        align-items: baseline;
        gap: 10px;
    }

    .price { 
        font-size: 1.8rem; 
        font-weight: 900; 
        color: #00bcd4; 
        text-shadow: 0 0 20px rgba(0, 188, 212, 0.2);
    }

    .old { 
        text-decoration: line-through; 
        color: #444; 
        font-weight: 600;
        font-size: 1.1rem; 
    }

    .sale-badge {
        background: rgba(0, 188, 212, 0.1);
        color: #00bcd4;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 0.7rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
</style>