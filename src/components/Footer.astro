---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer-content">

        <div class="footer-links">
            <a href="/impressum">Impressum</a>
            <a href="/datenschutz">Datenschutz</a>
            <a href="/agb">AGB</a>
        </div>

        <div class="footer-center">
            <p>Designed & Built by <a href="https://r3webdesign.de" target="_blank" class="r3-link">R3 Webdesign</a></p>
        </div>

        <div class="footer-copyright">
            <p>&copy; {currentYear} startplatzboerse.com</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 40px 20px;
        background: var(--bg-body); /* Etwas heller als Body */
        border-top: 1px solid rgba(255,255,255,0.05);
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-top: 80px; /* Abstand zum Inhalt davor */
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .footer-links {
        display: flex;
        gap: 20px;
    }

    .footer-links a {
        color: var(--text-muted);
        text-decoration: none; /* Clean Look */
        transition: 0.2s;
    }
    .footer-links a:hover { color: white; }

    /* R3 Webdesign Highlight */
    .r3-link {
        color: var(--cyan);
        font-weight: 600;
        text-decoration: none;
        position: relative;
    }
    .r3-link::after {
        content: '';
        position: absolute; width: 100%; height: 1px;
        bottom: -2px; left: 0;
        background-color: var(--cyan);
        transform: scaleX(0); transition: transform 0.3s ease;
    }
    .r3-link:hover::after { transform: scaleX(1); }

    /* Desktop Layout: Alles in einer Reihe */
    @media (min-width: 768px) {
        .footer-content {
            flex-direction: row;
            justify-content: space-between;
        }
        
        /* Sorgt dafür, dass das Copyright auf Desktop rechtsbündig steht */
        .footer-copyright {
            text-align: right;
        }
    }
</style>