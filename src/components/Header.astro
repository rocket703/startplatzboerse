        <div class="burger-wrapper" id="burger">
            <button class="menu__icon">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>

    <nav class="desktop-dock">
        <a href="/" class="dock-logo">startplatzboerse<span>.com</span></a>
        
        <div class="dock-links">
            <a href="/#infos">Infos</a>
            <a href="/#faq">FAQ</a>
            <a href="/kontakt">Kontakt</a>
        </div>

        <div class="auth-container">
            <a href="/login" class="dock-btn" id="login-desktop">Anmelden</a>
            <a href="/dashboard" class="dock-btn dash-btn" id="dash-desktop" style="display: none;">ðŸ‘¤ Mein Konto</a>
        </div>
    </nav>

    <div class="mobile-menu-overlay" id="menu">
        <nav class="mobile-links">
            <a href="/#infos">Infos</a>
            <a href="/#faq">FAQ</a>
            <a href="/kontakt">Kontakt</a>
            <a href="/login" class="btn-highlight" id="login-mobile">Anmelden</a>
            <a href="/dashboard" class="btn-highlight dash-btn" id="dash-mobile" style="display: none;">ðŸ‘¤ Mein Konto</a>
        </nav>
    </div>

</header>

<script>
    import { createClient } from '@supabase/supabase-js';

    // 1. Supabase nur EINMAL initialisieren
    const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    );

    // 2. AUTH-LOGIK (Die robuste Version)
    async function updateAuthUI() {
        try {
            // getSession ist schneller, da es lokal im Browser prÃ¼ft
            const { data: { session } } = await supabase.auth.getSession();
            const user = session?.user;

            console.log("Header Check:", user ? "Eingeloggt" : "Nicht eingeloggt");

            // Alle Button-Elemente sammeln
            const elements = {
                loginDesk: document.getElementById('login-desktop'),
                dashDesk: document.getElementById('dash-desktop'),
                loginMob: document.getElementById('login-mobile'),
                dashMob: document.getElementById('dash-mobile')
            };

            if (user) {
                // EINGELOGGT: Login verstecken, Dashboard zeigen
                if(elements.loginDesk) elements.loginDesk.style.setProperty('display', 'none', 'important');
                if(elements.dashDesk)  elements.dashDesk.style.setProperty('display', 'flex', 'important');
                if(elements.loginMob)  elements.loginMob.style.setProperty('display', 'none', 'important');
                if(elements.dashMob)   elements.dashMob.style.setProperty('display', 'block', 'important');
            } else {
                // AUSGELOGGT: Login zeigen, Dashboard verstecken
                if(elements.loginDesk) elements.loginDesk.style.setProperty('display', 'flex', 'important');
                if(elements.dashDesk)  elements.dashDesk.style.setProperty('display', 'none', 'important');
                if(elements.loginMob)  elements.loginMob.style.setProperty('display', 'block', 'important');
                if(elements.dashMob)   elements.dashMob.style.setProperty('display', 'none', 'important');
            }
        } catch (err) {
            console.error("Fehler im Header-Auth:", err);
        }
    }

    // 3. BURGER LOGIK (Chirurgisch integriert)
    const burgerWrapper = document.getElementById('burger');
    const menuIcon = document.querySelector('.menu__icon');
    const menu = document.getElementById('menu');
    const links = document.querySelectorAll('.mobile-links a');

    if(burgerWrapper && menu && menuIcon) {
        const toggleMenu = () => {
            menuIcon.classList.toggle('active');
            menu.classList.toggle('open');
            document.body.classList.toggle('no-scroll');
        };

        burgerWrapper.addEventListener('click', toggleMenu);
        links.forEach(link => {
            link.addEventListener('click', toggleMenu);
        });
    }

    // 4. INITIALISIERUNG & WATCHER
    updateAuthUI();

    // Reagiert sofort, wenn sich der Status Ã¤ndert (Login/Logout)
    supabase.auth.onAuthStateChange((event) => {
        console.log("Auth Event:", event);
        updateAuthUI();
    });
</script>

<style>
    /* --- DEINE BESTEHENDEN STYLES --- */
    .logo, .dock-logo { 
        font-weight: 900; 
        font-size: 1.3rem; 
        color: white; 
        letter-spacing: -0.5px; 
        text-decoration: none; 
        white-space: nowrap; 
    }
    .logo span, .dock-logo span { 
        color: var(--cyan); 
    }

    .mobile-bar {
        position: fixed; 
        top: 0; 
        left: 0; 
        width: 100%; 
        height: 80px;
        display: flex; 
        justify-content: space-between; 
        align-items: center;
        padding: 0 25px; 
        z-index: 2000;
        background: linear-gradient(to bottom, rgba(24,24,24,0.95) 0%, rgba(24,24,24,0) 100%);
    }

    .burger-wrapper {
        border-radius: 16px; border: 1px solid rgba(255,255,255,0.1);
        background: rgba(74, 74, 74, 0.4); backdrop-filter: blur(15px);
        width: 50px; height: 50px; display: flex; justify-content: center; align-items: center; cursor: pointer;
    }
    .menu__icon { width: 26px; height: 26px; padding: 2px; background: none; border: none; }
    .menu__icon span { display: block; width: 100%; height: 2px; border-radius: 2px; background-color: white; transition: 0.4s; position: relative; }
    .menu__icon span+span { margin-top: 6px; }

    .menu__icon.active span:nth-child(1) { top: 8px; transform: rotate(45deg); background: var(--cyan); }
    .menu__icon.active span:nth-child(2) { opacity: 0; }
    .menu__icon.active span:nth-child(3) { bottom: 8px; transform: rotate(-45deg); background: var(--cyan); }

    .mobile-menu-overlay {
        position: fixed; top: 0; right: -100%; width: 100%; height: 100vh;
        background: var(--bg-body); z-index: 1500; display: flex; align-items: center; justify-content: center;
        transition: 0.5s cubic-bezier(0.77,0,0.175,1);
    }
    .mobile-menu-overlay.open { right: 0; }
    .mobile-links { display: flex; flex-direction: column; gap: 30px; text-align: center; }
    .mobile-links a { font-size: 2rem; font-weight: 700; color: var(--text-muted); text-decoration: none; transition: 0.3s; }
    .mobile-links a:hover, .mobile-links a.btn-highlight { color: var(--cyan); }

    .desktop-dock { display: none; }

    @media (min-width: 900px) {
        .mobile-bar, .mobile-menu-overlay { display: none !important; }
        .desktop-dock {
            display: flex; 
            align-items: center; 
            justify-content: space-between; 
            position: fixed; 
            top: 25px; 
            left: 50%; 
            transform: translateX(-50%); 
            z-index: 1000;
            width: auto; 
            min-width: 850px; 
            padding: 12px 12px 12px 40px; 
            border-radius: 100px;
            gap: 60px; background: rgba(30, 30, 30, 0.7); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08); box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            animation: floatDown 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        }

        .dock-logo { margin-right: auto; padding-right: 20px; }
        .dock-links { display: flex; gap: 40px; }
        .dock-links a { color: var(--text-muted); font-size: 0.95rem; font-weight: 500; text-decoration: none; padding: 8px 16px; border-radius: 20px; transition: 0.3s; }
        .dock-links a:hover { color: white; background: rgba(255,255,255,0.05); }

        .dock-btn {
            background: var(--cyan); color: white; padding: 12px 28px; border-radius: 50px;
            font-weight: 700; font-size: 0.9rem; text-decoration: none; transition: 0.3s;
            box-shadow: 0 4px 15px rgba(0, 188, 212, 0.25); white-space: nowrap;
            display: flex; align-items: center; justify-content: center;
        }
        .dock-btn:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0, 188, 212, 0.4); }

        /* Style fÃ¼r den Dashboard-Button (etwas dezenter) */
        .dash-btn { background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); }
        .dash-btn:hover { background: rgba(255, 255, 255, 0.15); border-color: var(--cyan); }
    }

    @keyframes floatDown { from { top: -100px; opacity: 0; } to { top: 25px; opacity: 1; } }
    :global(body.no-scroll) { overflow: hidden; }
</style>